<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.movie.mapper.VUserMapper">

    <resultMap type="com.movie.pojo.VUser" id="BaseResultMap">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="pass" column="pass" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="INTEGER"/>
        <result property="vname" column="vname" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="v_user">
        select id,phone,pass,email,address,sex,vname from v_user
    </sql>
    <insert id="saveVUser" parameterType="com.movie.pojo.VUser">
          insert into v_user(phone,pass,email,address,sex,vname) values (#{phone},#{pass},#{email},#{address},#{sex},#{vname})
    </insert>
    <update id="editVUser" parameterType="com.movie.pojo.VUser">
        update v_user set
        phone=#{phone},
        email=#{email},
        address=#{address},
        sex=#{sex},
        vname=#{vname}
        where id=#{id}
    </update>
    <delete id="delVUserById" parameterType="int">
        delete from v_user where id=#{id}
    </delete>
    <select id="findVUser" resultType="com.movie.pojo.VUser">
        <include refid="v_user"></include>
    </select>
    <select id="vUserLogin" resultMap="BaseResultMap" parameterType="com.movie.pojo.VUser">
        <include refid="v_user"></include>
        where phone=#{phone}
        and
        pass=#{pass}
    </select>
</mapper>
